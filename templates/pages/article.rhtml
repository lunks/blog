<% url = [@config[:url], @path].join('/') %>
<article class="post">
<header>
<h1><%= title %></h1>
<span class="date"><%= date %></span>
</header>

<section class="content">
<%= body %>
</section>
<section class="comments">
<script src="/js/twitter.js"></script>
<script src="http://otter.topsy.com/trackbacks.js?callback=twitterReactions&perpage=100&url=<%= url %>"></script>
<div id="twitter-reactions"></div>
</section>
</article>

